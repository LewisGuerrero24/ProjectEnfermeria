<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Menú de Navegación</title>
    
</head>
<style>
    
    .title{
        color: #007BFF;
        margin-left:2%;
    }

    .table-container {
        max-width: 96%; /* Tamaño máximo de la tabla */
        margin: 0 auto;
        
    }

    .table-container > table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        font-size: 12px;
        margin-left: 0;
    }

    .table-container > table > .title_table , td {
        padding: 10px;
        border: 1px solid #ddd;
    }

 thead {
        background-color: #007BFF;
        color: white;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    .btn_table {
        background-color: #007BFF;
        color: white;
        padding: 5px 10px;
        border: none;
        border-radius: 3px;
        margin-top: 10px;
        cursor: pointer;
    }

    .btn_table:hover {
        background-color: #0056b3;
    }

</style>
<body>

    <h1 class="title">Pacientes</h1>

    <div class="table-container">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Fecha Nacimiento</th>
                    <th>Email</th>
                    <th>Telefono</th>
                    <th>Direccion</th>
                    <th>Genero</th>
                    <th>Age</th>
                    <th>Contacto Emergencia</th>
                    <th>Seguro</th>
                    <th>Fecha Registro</th>
                    <th>Consentimiento</th>
                </tr>
            </thead>
            <tbody>
                <% pacientes.forEach((paciente) => { %>
                    <tr>
                        <td><%= paciente.name +" "+paciente.lastname %></td>
                        <td><%= paciente.fecha_nacimiento %></td>
                        <td><%= paciente.email %></td>
                        <td><%= paciente.telefono %></td>
                        <td><%= paciente.direccion %></td>
                        <td><%= paciente.genero %></td>
                        <td><%= paciente.age %></td>
                        <td><%= paciente.contacto_emergencia %></td>
                        <td><%= paciente.Seguro %></td>
                        <td><%= paciente.Fecha_registro %></td>
                        <td><%= paciente.consentimiento %></td>
            
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
